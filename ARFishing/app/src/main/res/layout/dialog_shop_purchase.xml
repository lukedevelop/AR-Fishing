<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_corner"
    android:orientation="vertical"
    android:padding="30dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/dialog_shop_purchase_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부시리 몇 마리 구매하시겠습니까?"
        />
    <TextView
        android:id="@+id/dialog_shop_purchase_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="20sp"
        />
    <SeekBar
        android:id="@+id/seekBar_shop_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/dialog_shop_purchase_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/dialog_shop_purchase_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="OK"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            />
    </LinearLayout>


</LinearLayout>