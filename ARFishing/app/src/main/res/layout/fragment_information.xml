<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/level"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/rank1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:layout_gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_nickName_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="송찬욱"
                android:textSize="60sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:id="@+id/thitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="송찬욱"
                android:textSize="40sp"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon_catchfish_information"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:layout_gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="잡은 물고기"
                android:textSize="40sp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:id="@+id/tv_catchFish_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000마리"
                android:textSize="50sp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon_hasfish_information"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:layout_gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보유 물고기"
                android:textSize="40sp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:id="@+id/tv_hasFish_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000마리"
                android:textSize="50sp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/icon_money_information"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:layout_gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보유 머니"
                android:textSize="40sp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:id="@+id/tv_money_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000원"
                android:textSize="50sp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>